<div {{ attributes.addClass('branding') }}>
  {% if logo_url %}
    <a href="{{ home_url }}" rel="home" class="branding__logo-link">
      <img src="{{ logo_url }}" alt="{{ site_name ?: 'Home'|t }}" fetchpriority="high" class="branding__logo" />
    </a>
  {% endif %}

  {% if site_name or site_slogan %}
    <div class="branding__text">
      {% if site_name %}
        <a href="{{ home_url }}" rel="home" class="branding__site-name">{{ site_name }}</a>
      {% endif %}

      {% if site_slogan %}
        <span class="branding__slogan">{{ site_slogan }}</span>
      {% endif %}
    </div>
  {% endif %}
</div>
